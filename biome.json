{
  "files": {
    "include": ["app/**/*.ts", "scripts/**/*.ts"],
    "ignore": ["node_modules", ".next"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "linter": {
    "rules": {
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  }
}
