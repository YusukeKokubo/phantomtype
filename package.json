{
  "name": "phantomtype.com",
  "version": "1.0.0",
  "description": "phantomtype.com",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/YusukeKokubo/phantomtype"
  },
  "scripts": {
    "dev": "wrangler pages dev dist --live-reload",
    "build:css": "npx @tailwindcss/cli -i ./src/styles/input.css -o ./public/styles.css --minify",
    "build:ssg": "ts-node scripts/build-ssg.ts",
    "build": "npm run build:css && npm run build:ssg",
    "deploy": "npm run build && wrangler pages deploy dist",
    "lint": "biome check",
    "lint:fix": "biome check --fix --unsafe",
    "generatePics": "ts-node scripts/picsDataGenerator.ts"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "exifreader": "^4.29.0",
    "hono": "^4.6.14",
    "sharp": "^0.34.1",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/node": "22.14.1",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "tslint-react": "^5.0.0",
    "typescript": "^5.8.3",
    "wrangler": "^4.54.0"
  }
}
