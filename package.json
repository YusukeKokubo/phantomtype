{
  "name": "phantomtype.com",
  "version": "1.0.0",
  "type": "module",
  "description": "phantomtype.com",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/YusukeKokubo/phantomtype"
  },
  "scripts": {
    "dev": "vite",
    "build:css": "npx @tailwindcss/cli -i ./src/styles/input.css -o ./public/styles.css --minify",
    "build": "npm run build:css && vite build",
    "preview": "$npm_execpath run build && vite preview",
    "deploy": "$npm_execpath run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "lint": "biome check",
    "lint:fix": "biome check --fix --unsafe"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "hono": "^4.11.3",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@cloudflare/vite-plugin": "^1.20.0",
    "@cloudflare/workers-types": "^4.20260108.0",
    "@types/node": "25.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-ssr-components": "^0.5.2",
    "wrangler": "^4.57.0"
  }
}
